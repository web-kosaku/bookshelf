<h1>蔵書アプリ</h1>

<div id="books">
  <table>
    <thead>
      <tr>
        <th>タイトル</th>
        <th>価格</th>
        <th>備考</th>
        <th></th>
        <th></th>
        <th></th>
      </tr>
    </thead>
  
    <tbody>
      <% @books.each do |book| %>
        <tr>
          <td><%= book.title %></td>
          <td><%= book.price %></td>
          <td><%= book.description %></td>
          <td><%= link_to '詳細', book, :class => 'button detail' %></td>
          <td><%= link_to '編集', edit_book_path(book), :class => 'button edit' %></td>
          <td><%= link_to 'ころす', book, method: :delete, data: { confirm: 'Are you sure?' }, :class => 'button delete' %></td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>

<%= link_to '新規登録', new_book_path, :class => 'button new' %>
